           android:layout_height="wrap_content"
           android:text="FIRST"
           android:textSize="20sp"
           android:layout_weight="1"
           android:layout_margin="10dp"
           />
       <Button
           android:id="@+id/btn_second"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="SECOND"
           android:textSize="20dp"
           android:layout_weight="1"
           android:layout_margin="10dp"
           />

   </LinearLayout>


